####################################################################
# Attributes definitions
####################################################################
[attr]plaintext        !binary text diff merge
[attr]code             !binary text diff merge=text
[attr]windowsscript    !binary text eol=crlf diff merge=text
[attr]nixscript        !binary text eol=lf diff merge=text
[attr]binary           -text -diff -merge

####################################################################
# Default settings for all files
####################################################################
*                      binary

####################################################################
# File extensions
####################################################################
.editorconfig          code
.gitattributes         code
.gitignore             code
*.yml                  code
*.sh                   nixscript
*.cmd                  windowsscript
*.ps1                  code
*.psd1                 code
*.psm1                 code
*.txt                  rawtext
*.md                   plaintext
*.json                 code
